    </Page.BottomAppBar>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            
        </Grid.RowDefinitions>
        <map:MapControl x:Name="map1" Loaded="map1_Loaded"  />

    </Grid>
</Page>
